<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp">
   					  
    <!-- TextView android:id="@+id/area_type"
      android:layout_marginBottom="2dp"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      / -->

    <!-- EditText android:id="@+id/area_options"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:hint="@string/options"
      / -->

    <CheckBox android:id="@+id/area_visible"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:text="@string/visible_border"
      />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      android:layout_marginTop="25dip"
      >
      <!-- Button android:id="@+id/button_cancel"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_cancel"
        / -->

      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
      <Button android:id="@+id/button_ok"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_save"
      />

      <Button android:id="@+id/button_erase"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_delete"
        android:textColor="@color/textdelete"
        />

      </LinearLayout>

    </LinearLayout>

</LinearLayout>
