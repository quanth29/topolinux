<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp">
   					  
    <!-- TextView android:id="@+id/line_type"
      android:layout_marginBottom="2dp"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      / -->

    <EditText android:id="@+id/line_options"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:hint="@string/options"
      />

    <CheckBox android:id="@+id/line_reversed"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:text="@string/reversed"
      />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:id="@+id/line_outline"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      >
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/outline"
        />
        <CheckBox android:id="@+id/line_outline_out"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/out"
          />
        <CheckBox android:id="@+id/line_outline_in"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/in"
          />
        <!-- RadioButton android:id="@+id/line_outline_none"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="@string/none"
          / -->
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="right"
      >

      <Button android:id="@+id/button_sharp"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="10dp" 
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_sharp"
      />

      <Button android:id="@+id/button_rock"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_rock"
      />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      android:layout_marginTop="25dip"
      >
      <!-- Button android:id="@+id/button_cancel"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_marginRight="10dp" 
          android:background="@drawable/button"
          style="@style/button_default"
          android:text="@string/button_cancel"
      / -->
      
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" 
        android:gravity="right"
      >
        <Button android:id="@+id/button_ok"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_marginRight="10dp" 
          android:background="@drawable/button"
          style="@style/button_default"
          android:text="@string/button_save"
        />

        <Button android:id="@+id/button_erase"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:background="@drawable/button"
          style="@style/button_default"
          android:text="@string/button_delete"
          android:textColor="@color/textdelete"
        />

      </LinearLayout>
    </LinearLayout>

</LinearLayout>
