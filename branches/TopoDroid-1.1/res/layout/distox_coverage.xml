<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp">

    <TextView android:id="@+id/coverage_title"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:text="@string/title_coverage"
        />

    <ImageView android:id="@+id/coverage_image"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/coverage_value"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:text="@string/title_coverage"
        />

     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
   					  
      <Button android:id="@+id/coverage_eval"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="left"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
        android:text="@string/button_eval"
        />

      <Button android:id="@+id/coverage_eval_cal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="left"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
        android:text="@string/button_eval_cal"
        />

      <!-- Button android:id="@+id/coverage_back"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="left"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
        android:text="@string/button_back"
        / -->

     </LinearLayout>
</LinearLayout>
