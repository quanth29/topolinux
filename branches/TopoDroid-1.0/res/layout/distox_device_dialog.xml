<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp">

    <TextView android:id="@+id/device_address"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text=""
        />

    <TextView 
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/connection"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android" 
      android:id="@+id/download_connection"
      android:layout_marginTop="2dp"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      >
        <RadioButton android:id="@+id/download_batch"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_gravity="left"
          android:text="@string/download_batch"
          />
        <RadioButton android:id="@+id/download_continuous"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_gravity="right"
          android:text="@string/download_continuous"
          />
    </RadioGroup>

<!-- BATCH -->
    <TextView android:id="@+id/device_action_thread"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/device_action_thread"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <Button android:id="@+id/button_toggle_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_toggle"
        />
      <Button android:id="@+id/button_head_tail_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_head_tail"
        />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <Button android:id="@+id/button_read_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_read"
        />
      <Button android:id="@+id/button_write_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_write"
        />
    </LinearLayout>

<!-- CONTINUOS -->
    <TextView android:id="@+id/device_comm_thread"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/device_comm_thread"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <Button android:id="@+id/button_connect_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_connect"
        />
      <!-- Button android:id="@+id/button_reconnect_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_reconnect"
        / -->
      <Button android:id="@+id/button_disconnect_device"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_disconnect"
        />
    </LinearLayout>

    <Button android:id="@+id/button_back_device"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right"
        android:text="@string/button_back"
        />
   		
</LinearLayout>
