<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.DistoX"
      android:versionCode="10005"
      android:versionName="1.0.5">
    <uses-sdk
       android:minSdkVersion="8"
       android:targetSdkVersion="8"
       
    />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
          android:name=".TopoDroidApp"
          android:label="@string/app_name"
          android:icon="@drawable/icon" >

        <activity android:name=".TopoDroidActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GMActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>


        <activity android:name=".CalibActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_calib">
        </activity>

        <activity android:name=".SurveyActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".ShotActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".SensorActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".ExternalActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".CalibDialog"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_calib">
        </activity>

        <activity android:name=".DeviceActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_device">
        </activity>

        <activity android:name=".DeviceList"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_device">
        </activity>

        <activity android:name=".DrawingActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_drawing">
           <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
           </intent-filter>
        </activity>

        <activity android:name=".TopoDroidPreferences"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_options">
        </activity>

        <activity android:name=".DistoXAnnotations"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name_notes">
        </activity>

        <activity android:name=".PhotoActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

        <activity android:name=".SensorListActivity"
                  android:theme="@style/Theme.FullScreen"
                  android:label="@string/app_name">
        </activity>

    </application>
</manifest> 
