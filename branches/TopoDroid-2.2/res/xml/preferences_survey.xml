<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- CheckBoxPreference
    android:key="DISTOX_SAVE_ON_DESTROY"
    android:summary="Save current survey and calib"
    android:title="Store preferences"
    android:defaultValue="true"
  / -->

     <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_UNIT_LENGTH"
       android:summary="@string/pref_unit_length_summary"
       android:title="@string/pref_unit_length_title"
       android:defaultValue="meters"
       android:entries="@array/unitLength"
       android:entryValues="@array/unitLengthValue"
     />

     <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_UNIT_ANGLE"
       android:summary="@string/pref_unit_angle_summary"
       android:title="@string/pref_unit_angle_title"
       android:defaultValue="degrees"
       android:entries="@array/unitAngle"
       android:entryValues="@array/unitAngleValue"
     />

     <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_UNIT_LOCATION"
       android:summary="@string/pref_unit_location_summary"
       android:title="@string/pref_unit_location_title"
       android:defaultValue="ddmmss"
       android:entries="@array/unitLocation"
       android:entryValues="@array/unitLocationValue"
     />

     <com.topodroid.DistoX.MyListPreference
       android:key="DISTOX_ALTITUDE"
       android:summary="@string/pref_altitude_summary"
       android:title="@string/pref_altitude_title"
       android:defaultValue="0"
       android:entries="@array/altitudeType"
       android:entryValues="@array/altitudeTypeValue"
     />

     <com.topodroid.DistoX.MyEditPreference
       android:key="DISTOX_CRS"
       android:title="@string/pref_crs_title"
       android:summary="@string/pref_crs_summary"
       android:dialogTitle="@string/pref_crs_title"
       android:dialogMessage="@string/pref_crs_message"
       android:defaultValue="Long-Lat"
       android:enabled="false"
     />

     <CheckBoxPreference
        android:key="DISTOX_GPS_AVERAGING"
        android:title="@string/pref_gps_averaging_title"
        android:summary="@string/pref_gps_averaging_summary"
        android:defaultValue="false"
     />

     <!-- com.topodroid.DistoX.MyListPreference
