        android:text="@string/title_coverage"
        / -->

    <ImageView android:id="@+id/coverage_image"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        />

    <TextView android:id="@+id/coverage_value"
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:text="@string/title_coverage"
        />

      <Button android:id="@+id/coverage_eval"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dip"
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_eval"
        />

      <Button android:id="@+id/coverage_eval_cal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        android:singleLine="true"
        style="@style/button_default"
        android:text="@string/button_eval_cal"
        />

